		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-zinc-800 text-zinc-50 selection:bg-amber-100 selection:text-amber-800">
		<!-- <Header/> -->
		<!-- <div class="container w-screen py-1 px-6 lg:py-10 lg:px-96"> -->
